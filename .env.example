# Docker environment variables
# Copy this file to .env and update with your actual values

# Application Configuration
ASPNETCORE_ENVIRONMENT=Production
PORT=4005

# Traefik Configuration
HOST=parvazorg.minisource.ir
HOST_PREFIX=/api/payment

# Database Configuration
SA_PASSWORD=YourPassword123!
MSSQL_PID=Developer

# Authentication Configuration
AUTH_AUTHORITY=http://auth:4000
AUTH_AUDIENCE=payment-api

# Notification Service
NOTIF_SERVICE_URL=http://notif:4004

# Payment Gateway Configuration
DEFAULT_GATEWAY=ZarinPal
REDIRECT_URL=http://localhost:3000/payment-result
SHOP_CALLBACK_URL=http://shop:4008/api/v1/orders/payment-callback

# ZarinPal Gateway Configuration
ZARINPAL_MERCHANT_ID=your-zarinpal-merchant-id
ZARINPAL_SANDBOX=true

# Snapp Gateway Configuration
SNAPP_API_KEY=your-snapp-api-key
SNAPP_TERMINAL_ID=your-terminal-id

# Polly (Resilience) Configuration
POLLY_RETRY=3
POLLY_TIMEOUT=30
